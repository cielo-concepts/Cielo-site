doctype html
html
  head
    block title
      title Default title

    link(rel="shortcut icon", href="img/favicon.ico")

    block css
      link(rel="stylesheet", href="css/font-awesome.min.css")
      link(rel="stylesheet", href="css/simple-line-icons.css")
      link(rel="stylesheet", href="css/bootstrap.min.css")
      link(rel="stylesheet", href="css/animate.css")
      link(rel="stylesheet", href="css/jquery.bxslider.css")
      link(rel="stylesheet", href="css/owl.carousel.css")
      link(rel="stylesheet", href="css/slidebars.css")
      link(rel="stylesheet", href="rs-plugin/css/settings.css")
      link(rel="stylesheet", href="css/style.css")

    block seo

  body.inner-pages
    block spinner
      div.loader-wrap
        div.spinner

    block header
      div#top.page-top
        header#header.fixed-header.navbar-fixed-top.sb-slide
          div.container
            div.logo.local-scroll
              a.site-brand(href="/")
                img(src="img/logo2_smaller.png", width="40px") 
                | cielo concepts inc
            div.sb-toggle-right.pull-right.visible-xs.visible-sm
              i.fa.fa-bars
            nav.site-nav.hidden-xs.hidden-sm
              ul.main-menu.local-scroll
                li
                  a(href="/#about") About Us
                li
                  a(href="/#partners") Our Partners
                li
                  a(href="/#work") Work
                li
                  a(href="/#services") Services
                li
                  a(href="http://innovatorylife.com") Blog
                li
                  a(href="/#contact") Contact

    block content
      div#sb-site
        p Content will go here

    block footer
      footer.site-footer
        div.footer-widgets
          div.container
            div.col-md-6.col-sm-6.widget
              div.widget-title
                h2 More about us
              p 
                | Lorem ipsum dolor sit amet, consectetur adipisicing elit. Cupiditate quasi expedita <br>aliquid iusto | ipsam similique laborum earum.
              br
              p.mb-half
                i.fa.fa-phone.icon-left Phone: 318-869-0488
              p.mb-half
                i.fa.fa-map-marker.icon-left Location: 2883 Tecumsah Lane Shreveport, LA 71106
              p.mb-half
                i.fa.fa-desktop.icon-left www.todrr.com
            div#contact.col-md-6.col-sm-6.widget
              div.widget-title
                h2 Get in touch!
              div.contact-form
                form.form-group(action="#", method="post")
                  div.row
                    div.col-md-6.col-sm-6.col-xs-12
                      input#name(type="text", name="name", placeholder="Name (required)")
                    div.col-md-6.col-sm-6.col-xs-12
                      input#email(type="email", name="email", placeholder="Email Address (required)")
                    div.col-md-12.col-sm-12.col-xs-12
                      input#subject(type="text", name="subject", placeholder="Subject")
                    div.col-md-12.col-sm-12.col-xs-12
                      textarea#message(name="message", cols="39", rows="4", placeholder="Your Message")
                    div.col-md-12.col-sm-12.col-xs-12
                      input#submit.comment-submit.t-btn.t-btn-primary(name="submit", type="submit", tabindex="5", value="Send Message")
        div.footer-bottom.text-center
          div.container
            div.social-icons.mb-2
              a.fa.fa-envelope(href="#", target="_blank")
              a.fa.fa-behance(href="#", target="_blank")
              a.fa.fa-dribbble(href="#", target="_blank")
              a.fa.fa-facebook(href="#", target="_blank")
              a.fa.fa-flickr(href="#", target="_blank")
              a.fa.fa-instagram(href="#", target="_blank")
              a.fa.fa-foursquare(href="#", target="_blank")
              a.fa.fa-twitter(href="#", target="_blank")
            div.footer-copyright
              div.copyright-text 
                | &copy; Full Rights Reserved. Created with 
                i.fa.fa-heart by Todrr.

    block sidebar
      div.sb-slidebar.sb-right
        nav.slidebar-menu 
          ul.local-scroll 
            li
              a(href="/#about") About Us
            li
              a(href="/#partners") Our Partners
            li
              a(href="/#work") Work
            li
              a(href="/#services") Services
            li
              a(href="http://innovatorylife.com") Blog
            li
              a(href="/#contact") Contact

    div.go-top
      a(href="#")
        i.fa.fa-angle-up

    block include-js
      script(type="text/javascript", src="js/jquery-1.11.2.min.js")
      script(type="text/javascript", src="js/jquery.easing.1.3.js")
      script(type="text/javascript", src="js/bootstrap.min.js")
      script(type="text/javascript", src="js/appear.min.js")
      script(type="text/javascript", src="js/jquery.countTo.js")
      script(type="text/javascript", src="js/jquery.scrollTo.min.js")
      script(type="text/javascript", src="js/jquery.localScroll.min.js")
      script(type="text/javascript", src="js/jquery.viewport.mini.js")
      script(type="text/javascript", src="js/skrollr.js")
      script(type="text/javascript", src="js/smoothscroll.min.js")
      script(type="text/javascript", src="js/imagesloaded.pkgd.min.js")
      script(type="text/javascript", src="js/isotope.pkgd.min.js")
      script(type="text/javascript", src="js/jquery.bxslider.min.js")
      script(type="text/javascript", src="js/owl.carousel.min.js")
      script(type="text/javascript", src="js/slidebars.min.js")
