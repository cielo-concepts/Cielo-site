// See http://eslint.org/docs/rules
{
  "extends": "airbnb",
  "parser": "babel-eslint",

  "env": {
    "node": true,
    "es6": true
  },
  "rules": {
    "spaced-comment": 0, // disable because it's tedious to add spaces to commented blocks and doesn't seem necessary
    "new-cap": [2, { "capIsNewExceptions": ["List", "Set", "Map", "OrderedMap", "Repeat"] }],
    "comma-dangle": [2, "never"],

    // shame
    "no-unused-vars": 0
  }
}